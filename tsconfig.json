{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "./lib",
    "baseUrl": ".",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "target": "es2018",
    "lib": ["es2018"],
    "typeRoots": ["./node_modules/@types"]
  }
}
